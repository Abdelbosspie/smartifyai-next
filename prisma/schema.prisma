// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL") // e.g. DATABASE_URL="postgresql://user:password@host:port/dbname"
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

/**
 * =========================
 * Core auth / user models
 * =========================
 */
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String? // hashed (for credentials flow)
  image         String?

  // Back-relations
  accounts      Account[]
  sessions      Session[]
  subscriptions Subscription[]
  agents        Agent[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // NextAuth OAuth fields
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  status           String?
  priceId          String?
  currentPeriodEnd DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * =========================
 * App domain models
 * =========================
 */
model Agent {
  id            String      @id @default(cuid())
  userId        String
  name          String
  type          String
  voice         String?
  prompt        String?
  model         String      @default("gpt-3.5-turbo") 
  language      String?     @default("English")
  welcome       String?     @default("Hi there! How can I help you?")
  aiSpeaksFirst Boolean?    @default(false)
  dynamicMsgs   Boolean?    @default(false)
  published     Boolean?    @default(false)
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages      Message[]
  knowledge     Knowledge[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  role      String // "user" | "assistant" | "system"
  content   String
  createdAt DateTime @default(now())

  @@index([agentId, createdAt])
}

model Knowledge {
  id        String   @id @default(cuid())
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  title     String?
  content   String? // extracted text
  fileUrl   String?
  createdAt DateTime @default(now())
}
